---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import { lifetimeDeal } from '~/data/pricingData';

const metadata = {
  title: 'Perfectly Hair - Intelligent Testimonial Engine for Salons',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header {...headerData} isSticky />
  </Fragment>
  
  <Hero2
    tagline="Turn Happy Clients into Powerful Reviews."
    title=`<span class="text-accent dark:text-white">Stop Losing Valuable Reviews.</span>`
    subtitle="Perfectly Hair automatically captures authentic testimonials from your happy customers *before* they walk out the door."
    actions={[
      { variant: 'primary', text: 'Claim Your Lifetime Deal - $99', href: '/pricing/' },
      { text: 'See How It Works', href: '#features' },
    ]}
    image={{ src: '/images/testimonial-1.webp', alt: 'Happy client in a modern hair salon' }}
  />
  
  <Features
    class="-mt-16"
    id="features"
    title="Features Designed for Salon Success"
    subtitle="Effortlessly build a stellar online reputation."
    columns={2}
    items={[
        { title: 'Automated Testimonial Capture', description: 'Our system automatically prompts clients for feedback via SMS or email, making review collection seamless.', icon: 'tabler:armchair' },
        { title: 'Smart Review Filtering', description: 'Instantly identify and highlight your best reviews, ensuring only positive experiences are showcased.', icon: 'tabler:cut' },
        { title: 'Multi-Platform Publishing', description: 'Easily share testimonials to Google, Yelp, Facebook, your website, and more â€“ all from one dashboard.', icon: 'tabler:armchair' },
        { title: 'Beautifully Branded Testimonial Displays', description: 'Customize the look and feel of your testimonials to match your salon&#39;s brand identity.', icon: 'tabler:cut' },
    ]}
  />

  <Content
    class="-mt-16"
    items={[
        { title: 'Attract New Clients', description: 'Positive reviews build trust and attract potential customers searching for a salon like yours.' },
        { title: 'Boost Your Search Ranking', description: 'Google prioritizes businesses with strong online reviews, improving your visibility in local search results.' },
    ]}
    image={{ src: '/images/testimonial-2.webp', alt: 'Stylist working on a client' }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        <span class="text-accent dark:text-white">Why Client Reviews Matter for Salons</span></span>
      </h3>
    </Fragment>
    <Fragment slot="bg"><div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div></Fragment>
  </Content>

  <Pricing
    title={`<span class="text-accent dark:text-white">Simple, Scalable Pricing</span>`}
    prices={[lifetimeDeal]}
  />

  <FAQs
    class="-mt-16 px-6"
    title="Frequently Asked Questions"
    items={[
        { title: 'How does Perfectly Hair integrate with my existing systems?', description: 'Perfectly Hair works seamlessly with most salon software. We offer easy integration options and dedicated support.', icon: 'tabler:scissors' },
        { title: 'Is Perfectly Hair GDPR compliant?', description: 'Yes, Perfectly Hair is fully GDPR compliant. We prioritize data privacy and security.', icon: 'tabler:scissors' },
        { title: 'Can I customize the testimonial request message?', description: 'Absolutely! You have full control over the messaging to ensure it aligns with your brand voice.', icon: 'tabler:scissors' },
        { title: 'What kind of support do you offer?', description: 'We provide comprehensive support via email, chat, and phone. Our team is dedicated to helping you succeed.', icon: 'tabler:scissors' },
    ]}
  >
    <Fragment slot="bg"><div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div></Fragment>
  </FAQs>

<Steps2
    class="-mt-16"
    title="Request a Demo"
    subtitle="See Perfectly Hair in action and discover how it can transform your salon&#39;s reputation."
    callToAction={{ text: 'Contact us', href: '/contact/' }}
    image={{ src: '/images/testimonial-3.webp', alt: 'Perfectly Hair Alt3' }}
  />
</Layout>
